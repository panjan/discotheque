{
  "description": "A browser extension that plays a song when your HTTP server is down.",
  "manifest_version": 2,
  "name": "Discotheque",
  "version": "0.1",
  "homepage_url": "https://github.com/panjan/discotheque",

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "http://*/*",
    "activeTab",
    "storage"
  ]
}
